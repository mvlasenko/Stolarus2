@model  Stolarus2.Data.Models.Translation

@using Stolarus2.Data.Properties
@using (Ajax.BeginForm("UpdatePartial", null,
    new AjaxOptions
    {
        InsertionMode = InsertionMode.Replace,
        HttpMethod = "POST",
        UpdateTargetId = "modal-content",
        OnSuccess = "RefreshGrid(currentPageIndex);"
    },
    new { @id = "frmModal" }))
{

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">@Resources.Edit</h4>
    </div>

    <div class="modal-body">

        @Html.ValidationSummary(true, "", new { @class = "alert-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Code, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Code, "", new { @class = "label-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Table, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Table, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Table, "", new { @class = "label-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Field, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Field, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Field, "", new { @class = "label-danger" })
        </div>
        <div class="form-group">
            <label class="control-label" for="translation-original">Original</label>
            <div class="form-control">
                <span id="translation-original"></span>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Text, "", new { @class = "label-danger" })
        </div>

    </div>

    <div class="modal-footer">
        <button type="submit" class="btn btn-primary" onclick="if ($('#frmModal').valid()) { $('#modal').modal('hide'); $('#loader').modal('show') }">@Resources.Save</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">@Resources.Close</button>
    </div>
}