@using Stolarus2.Data.Models
@using Stolarus2.Helpers

@model Stolarus2.ViewModels.ProductCategoriesInfo

@{
    ViewBag.Title = "Product Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Latest Products -->
<div id="products">
    <div class="content-lg container">

        <div class="row margin-b-40">
            <div class="col-sm-6">
                <h2>All Products</h2>
            </div>
        </div>
        <!--// end row -->

        <div class="row">

            @foreach (ProductCategory cat in Model.ProductCategories)
            {
                <!-- Latest Products -->
                <div class="col-sm-4 sm-margin-b-50">
                    <div class="margin-b-20">
                        <img class="img-responsive" src="@cat.ImageID.GetPath(970, 647)" alt="@cat.Name">
                    </div>
                    <h4><a href="#">@cat.Name</a></h4>
                    <p>@cat.Description</p>
                    @Html.ActionLink("Read More", "Index", "Products", new { @class = "link" })
                </div>
                <!-- End Latest Products -->
            }

        </div>
        <!--// end row -->
    </div>
</div>
<!-- End Latest Products -->
